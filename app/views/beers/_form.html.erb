<%= simple_form_for @beer, :html => { multipart: true } do |f| %>
    <%= f.label :beer_img, 'Image' %>
    <%= f.file_field :beer_img %>
    <%= f.label :category_id, 'Category' %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a Category", html: { class: 'chosen'} )%><br />
    <%= f.label :brewery_id, 'Brewery' %>
    <%= select_tag(:brewery_id, options_for_select(@breweries), :prompt => "Select a Brewery") %>
    <%= f.input :name, label: 'Beer Name'%>
    <%= f.input :description %>
    <%= f.button :submit, class: 'btn btn-custom' %>
<% end %>